@model PageResult<DbTableViewModel,int>
@{

}

<entity-table model="@Model" asp-controller="@Url.Action("Index")" asp-action="@Url.Action("Index")">
    <table-settings>
        <container-settings display="@L["表单实体"]">
            <a class="btn btn-primary float-right" href="@Url.Action("Editor")">创建</a>
        </container-settings>
        <pagination-setttings page-index="Model.Cursor"></pagination-setttings>
    </table-settings>
    <table-columns>
        <table-column for="Id" title="@L["选择"]" selectable="true"></table-column>
        <table-column for="Name"></table-column>
        <table-column for="Title"></table-column>
        <table-column for="Description"></table-column>
        <table-column for="CreateAt"></table-column>
        <table-column for="Status"></table-column>
    </table-columns>
    <table-buttons column-style="display: flex; justify-content: space-around;">
        <table-button title="@L["编辑"]" icon-class="fa fa-edit" asp-action="x=>@Url.Action("Editor",new { id = ((DbTableViewModel)x).Id })"></table-button>
        <table-button title="@L["表单设计"]" icon-class="fa fa-vector-square" asp-action="x=>@Url.Action("Index", "FormDesign", new { id = ((DbTableViewModel)x).Id })"></table-button>
        <table-button title="@L["删除"]" icon-class="fa fa-times" asp-action="x=>@Url.Action("Delete", new { id = ((DbTableViewModel)x).Id })"></table-button>
    </table-buttons>
</entity-table>