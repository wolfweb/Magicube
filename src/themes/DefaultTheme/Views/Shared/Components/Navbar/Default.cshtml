@model MenuItem

@functions{
    const string CrumbsTemplate = "<li class=\"nav-item d-none d-sm-inline-block\"><a href=\"{0}\" class=\"nav-link\">{1}</a></li>";

    public IHtmlContent RenderBreadcrumbs(MenuItem menu) {
        var list = new List<string> { 
            string.Format(CrumbsTemplate, "/admin", "首页")
        };
        if (menu == null) return new HtmlString(string.Join("", list));
        var pos = menu;
        while (pos.Parent != null) {
            list.Insert(1, string.Format(CrumbsTemplate, pos.Href, pos.Text));
            pos = pos.Parent;
        }

        return new HtmlString(string.Join("", list));
    }
}

